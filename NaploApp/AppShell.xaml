<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NaploApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NaploApp"
    xmlns:pages="clr-namespace:NaploApp.Pages"
    Title="NaploApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    
    <ShellContent
        Title="Create"
        ContentTemplate="{DataTemplate pages:CreatePage}"
        Route="CreatePage" />

    <ShellContent
        Title="Edit"
        ContentTemplate="{DataTemplate pages:EditPage}"
        Route="EditPage" />

    <ShellContent
        Title="File"
        ContentTemplate="{DataTemplate pages:FilePage}"
        Route="FilePage" />


</Shell>
